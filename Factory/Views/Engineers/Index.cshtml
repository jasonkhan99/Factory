@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }, new { Style = "color:White" })</li>
}
<br>
<button class="btn btn-primary btn-md" onclick="location.href='@Url.Action("Create")'">Add new Engineer</button>
<br>
<br>
<button class="btn btn-warning btn-md" onclick="location.href='@Url.Action("Index", "Home")'">Back Home</button>