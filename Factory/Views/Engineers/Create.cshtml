@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="well">
  <h2>Add a new Engineer</h2>
  @using (Html.BeginForm())
  {
      @Html.LabelFor(model => model.Name, new { Style = "color:White" })<span class="labelBoxSpace"></span>
      @Html.TextBoxFor(model => model.Name)<span class="boxToNextSpace"></span>
      <input type="submit" value="Add new Engineer" class="btn btn-primary" />
  }
  <br>
  <button class="btn btn-warning btn-md" onclick="location.href='@Url.Action("Index")'">Show all Engineers</button>
</div>