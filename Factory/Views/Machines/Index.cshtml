@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }, new { Style = "color:White" })</li>
}
<br>
<button class="btn btn-primary btn-md" onclick="location.href='@Url.Action("Create")'">Add new Machine</button>
<br>
<br>
<button class="btn btn-warning btn-md" onclick="location.href='@Url.Action("Index", "Home")'">Back Home</button>